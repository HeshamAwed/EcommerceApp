<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcommerceApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/reguler</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/sale</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EcommerceApp.Splash">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="titleTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/mainText</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/semibold</item>
    </style>
    <style name="subtitleTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/textAd</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/semibold</item>
    </style>

    <style name="Widget.MaterialComponents.Button.Primary">
        <item name="fontFamily">@font/semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">30dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:letterSpacing">-0.0003</item>
        <item name="android:lineSpacingExtra">-10dp</item>
        <item name="elevation">0dp</item>
    </style>


    <style name="AppFancyDialogStyle" parent="FancyDialogTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="positiveButtonStyle">@style/positiveButtonStyle</item>
        <item name="negativeButtonStyle">@style/negativeButtonStyle</item>
        <item name="textTitleColor">@color/mainText</item>
        <item name="textSubTitleColor">@color/textAd</item>
        <item name="dialogBackground">@color/white</item>
    </style>
</resources>